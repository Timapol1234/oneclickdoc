// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  name         String?
  passwordHash String?    @map("password_hash")
  documents    Document[]
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Category {
  id          String     @id @default(uuid())
  name        String
  slug        String     @unique
  icon        String
  description String?
  order       Int        @default(0)
  templates   Template[]
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  @@map("categories")
}

model Template {
  id              String      @id @default(uuid())
  title           String
  description     String
  categoryId      String      @map("category_id")
  category        Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  contentJson     String      @map("content_json") // Структура документа с HTML шаблоном (JSON as string)
  isActive        Boolean     @default(true) @map("is_active")
  popularityScore Int         @default(0) @map("popularity_score")
  tags            String      // Comma-separated tags
  applicantType   String      @map("applicant_type") // "physical" | "legal" | "both"
  formFields      FormField[]
  documents       Document[]
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  @@index([categoryId])
  @@index([applicantType])
  @@index([isActive])
  @@map("templates")
}

model FormField {
  id              String   @id @default(uuid())
  templateId      String   @map("template_id")
  template        Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  fieldName       String   @map("field_name")
  fieldType       String   @map("field_type") // "text" | "number" | "date" | "select" | "textarea"
  label           String
  placeholder     String?
  validationRules String?  @map("validation_rules") // JSON as string
  stepNumber      Int      @map("step_number")
  order           Int
  isRequired      Boolean  @default(false) @map("is_required")
  options         String?  // Comma-separated options for select fields

  @@index([templateId])
  @@index([stepNumber])
  @@map("form_fields")
}

model Document {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  templateId String   @map("template_id")
  template   Template @relation(fields: [templateId], references: [id], onDelete: Restrict)
  title      String
  status     String // "draft" | "generated"
  filledData String   @map("filled_data") // Заполненные пользователем данные (JSON as string)
  pdfUrl     String?  @map("pdf_url")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([templateId])
  @@index([status])
  @@map("documents")
}
